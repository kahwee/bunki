{
  "name": "bunki",
  "version": "0.11.0",
  "description": "An opinionated static site generator built with Bun featuring PostCSS integration and modern web development workflows",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "bun build.js",
    "dev": "bun run --watch src/index.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov",
    "test:watch": "bun test --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "typecheck": "bun tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prepack": "bun run clean && bun run build",
    "prepublishOnly": "bun run clean && bun run build && bun run test && bun run typecheck"
  },
  "bin": {
    "bunki": "./dist/cli.js"
  },
  "keywords": [
    "static-site-generator",
    "markdown",
    "blog",
    "bun",
    "typescript",
    "postcss",
    "tailwind",
    "css-processing",
    "jamstack",
    "web-development"
  ],
  "author": "KahWee Teng",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kahwee/bunki.git"
  },
  "bugs": {
    "url": "https://github.com/kahwee/bunki/issues"
  },
  "homepage": "https://github.com/kahwee/bunki#readme",
  "dependencies": {
    "commander": "^14.0.2",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "marked-alert": "^2.1.2",
    "marked-highlight": "^2.2.3",
    "nunjucks": "^3.2.4",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sanitize-html": "2.17.0",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/nunjucks": "^3.2.6",
    "@types/sanitize-html": "^2.16.0",
    "autoprefixer": "^10.4.23",
    "bun-types": "^1.3.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "postcss": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "bun": ">=1.3.2",
    "node": ">=18.0.0"
  },
  "engineStrict": true,
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/kahwee"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    },
    "./cli": "./dist/cli.js"
  },
  "sideEffects": false
}
